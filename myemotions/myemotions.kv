<CustPadding@BoxLayout>:
    orientation: "vertical"
    size_hint: 1, .1

<MyEmotionScale>:
    id: main_screen
    bgcolor: 0,0.6,0,1
    canvas:
        Color:
            rgba: self.bgcolor
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        Label:
            size_hint: 1, .2
            text: str(emotion_scale.value)
            font_size: 50
        Slider:
            id: emotion_scale
            size_hint: 1, .6
            orientation: "vertical"
            min : 1
            max : 10
            step: 1
            on_value: root.bgcolor = root.background_color[self.value-1]
            cursor_image: root.get_image(emotion_scale.value, emotion_type.value)[0]
            cursor_disabled_image: root.get_image(emotion_scale.value, emotion_type.value)[0]
        CustPadding:
        BoxLayout:
            orientation: "vertical"
            size_hint: 1, .2
            BoxLayout:
                orientation: "horizontal"
                Button:
                    text: "Colere"
                    on_press: emotion_type.value = 1
                Button:
                    text: "Anxiete"
                    on_press: emotion_type.value = 2
                Button:
                    text: "Joie"
                    on_press: emotion_type.value = 3
                Button:
                    text: "Tristesse"
                    on_press: emotion_type.value = 4
            Slider:
                id: emotion_type
                min : 1
                max : len(root.all_folders)-1
                step: 1
                cursor_image: root.get_image(emotion_scale.value, emotion_type.value)[1]
                cursor_disabled_image: root.get_image(emotion_scale.value, emotion_type.value)[1]
